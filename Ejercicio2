      "source": [
        "def calcular_b(a):\n",
        "    n = len(a)\n",
        "    b = [0] * n\n",
        "    for i in range(n - 1, -1, -1):\n",
        "        for j in range(i + 1, n):\n",
        "            if a[i] > a[j]:\n",
        "                b[i] += 1\n",
        "    return b\n",
        "\n",
        "def main():\n",
        "    user_input = input(\"Ingrese una lista de números de mayor a menor separados por espacios: \")\n",
        "    a = [int(x) for x in user_input.split()]\n",
        "\n",
        "    b = calcular_b(a)\n",
        "    print(\"Secuencia b:\")\n",
        "    print(b)\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()\n"
      ]
    }
  ]
